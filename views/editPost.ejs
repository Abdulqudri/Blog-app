
	<div class="body">
		<div class="form-container">
			<h1>Edit Post</h1>
			<form id="formPost" enctype="multipart/form-data">
				<p id="error"></p>
				<div class="form-group">
					<label for="title">Title</label>
					<input type="text" id="title" name="title" value="<%= post.title %>">
				</div>
				<div class="form-group">
					<label for="summary">Summary</label>
					<input type="text" id="summary" name="summary" value="<%= post.summary %>">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input type="file" id="image" name="cover" value="<%= post.image %>">
				</div>
				<div class="form-group">
					<label for="content">Content</label>
					<textarea id="content" name="content" rows="10" cols="50"><%= post.content %></textarea>
				</div>
				<button type="submit" class="btn"
					onclick="editPost('<%=post._id%>')">
					Update</button>
			</form>
		</div>
	</div>
	<script src="/public/js/editPost.js"></script>
