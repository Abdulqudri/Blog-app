
	<div class="body">
		<div class="form-container">
			<h1>New Post</h1>
			<!-- Error message container -->
			<p id="error" class="error-message" aria-live="polite"></p>

			<form id="formPost" enctype="multipart/form-data" novalidate>
				<div class="form-group">
					<label for="title">Title</label>
					<input 
						type="text" 
						id="title" 
						name="title" 
						required 
						placeholder="Enter post title" 
						aria-required="true">
				</div>

				<div class="form-group">
					<label for="summary">Summary</label>
					<input 
						type="text" 
						id="summary" 
						name="summary" 
						required 
						placeholder="Enter a brief summary" 
						aria-required="true">
				</div>

				<div class="form-group">
					<label for="image">Image</label>
					<input 
						type="file" 
						id="image" 
						name="cover" 
						required 
						accept="image/*" 
						aria-required="true">
				</div>

				<div class="form-group">
					<label for="content">Content</label>
					<textarea 
						id="content" 
						name="content" 
						rows="10" 
						cols="50" 
						required 
						placeholder="Write your post content here..." 
						aria-required="true"></textarea>
				</div>

				<button 
					type="submit" 
					class="btn" 
					id="btn">Post</button>
			</form>
		</div>
	</div>
	<script src="/public/js/createPost.js" defer></script>

